{
  "title": "adminrules.json",
  "definitions": {
    "BandwidthMatrix": {
      "type": "object",
      "required": [
        "values"
      ],
      "properties": {
        "properties": {
          "type": "array",
          "items": {
            "$ref": "taxonomy.json#/definitions/Property"
          }
        },
        "values": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "$ref": "taxonomy.json#/definitions/BandwidthMetric"
            }
          }
        }
      }
    },
    "Decision": {
      "description": "Decision is a result of evaluating a configuration policy which satisfies the specified predicates",
      "type": "object",
      "properties": {
        "deploy": {
          "$ref": "#/definitions/DeploymentStatus",
          "description": "a decision regarding deployment: True = require, False = forbid, Unknown = allow"
        },
        "policy": {
          "$ref": "#/definitions/DecisionPolicy",
          "description": "Descriptions of policies that have been used for evaluation"
        },
        "restrictions": {
          "$ref": "#/definitions/Restrictions",
          "description": "Deployment restrictions on modules, clusters and additional resources"
        }
      }
    },
    "DecisionPerCapability": {
      "type": "object",
      "required": [
        "capability",
        "decision"
      ],
      "properties": {
        "capability": {
          "$ref": "taxonomy.json#/definitions/Capability"
        },
        "decision": {
          "$ref": "#/definitions/Decision"
        }
      }
    },
    "DecisionPolicy": {
      "description": "DecisionPolicy is a justification for a policy that consists of a unique id, id of a policy set and a human readable desciption",
      "type": "object",
      "required": [
        "ID"
      ],
      "properties": {
        "ID": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "policySetID": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "DeploymentStatus": {
      "type": "string",
      "enum": [
        "True",
        "False",
        "Unknown"
      ]
    },
    "EvaluationOutputStructure": {
      "description": "Result of query evaluation",
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "$ref": "#/definitions/RuleDecisionList"
        }
      }
    },
    "Infrastructure": {
      "description": "Infrastructure object",
      "type": "object",
      "required": [
        "bandwidth",
        "storageaccounts"
      ],
      "properties": {
        "bandwidth": {
          "$ref": "#/definitions/BandwidthMatrix"
        },
        "storageaccounts": {
          "$ref": "#/definitions/Storage"
        }
      }
    },
    "RangeType": {
      "type": "object",
      "properties": {
        "max": {
          "type": "integer",
          "format": "int64"
        },
        "min": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "Restriction": {
      "type": "object",
      "required": [
        "property"
      ],
      "properties": {
        "property": {
          "type": "string"
        },
        "range": {
          "$ref": "#/definitions/RangeType"
        },
        "values": {
          "$ref": "#/definitions/StringList"
        }
      }
    },
    "Restrictions": {
      "description": "Deployment restrictions on modules, clusters and additional resources that will be added in the future",
      "type": "object",
      "properties": {
        "bandwidth": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Restriction"
          }
        },
        "clusters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Restriction"
          }
        },
        "modules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Restriction"
          }
        },
        "storageaccounts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Restriction"
          }
        }
      }
    },
    "RuleDecisionList": {
      "description": "A list of decisions, e.g. [{\"capability\": \"read\", \"decision\": {\"deploy\": \"True\"}}, {\"capability\": \"write\", \"decision\": {\"deploy\": \"False\"}}]",
      "type": "array",
      "items": {
        "$ref": "#/definitions/DecisionPerCapability"
      }
    },
    "Storage": {
      "type": "object",
      "properties": {
        "properties": {
          "type": "array",
          "items": {
            "$ref": "taxonomy.json#/definitions/Property"
          }
        },
        "values": {
          "type": "array",
          "items": {
            "$ref": "taxonomy.json#/definitions/StorageAccount"
          }
        }
      }
    },
    "StringList": {
      "description": "Restriction connects a property to a list of allowed values. Semantics of a list is a disjunction of values, i.e. a type can be either plugin or config.",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}