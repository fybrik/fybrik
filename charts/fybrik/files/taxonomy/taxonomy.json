{
  "title": "taxonomy.json",
  "definitions": {
    "Action": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "$ref": "#/definitions/ActionName"
        }
      },
      "additionalProperties": true
    },
    "ActionName": {
      "type": "string"
    },
    "AppInfo": {
      "type": "object",
      "additionalProperties": true
    },
    "AssetID": {
      "type": "string"
    },
    "AttributeType": {
      "type": "string",
      "enum": [
        "numeric",
        "string",
        "bool"
      ]
    },
    "Capability": {
      "type": "string"
    },
    "Connection": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "$ref": "#/definitions/ConnectionType"
        }
      },
      "additionalProperties": true
    },
    "ConnectionType": {
      "type": "string"
    },
    "DataFlow": {
      "type": "string",
      "enum": [
        "read",
        "write",
        "delete",
        "copy"
      ]
    },
    "DataFormat": {
      "type": "string"
    },
    "InfrastructureElement": {
      "type": "object",
      "required": [
        "attribute",
        "value"
      ],
      "properties": {
        "argObjects": {
          "description": "Argument types for cross-object attributes",
          "type": "array",
          "items": {
            "$ref": "#/definitions/InstanceType"
          }
        },
        "arguments": {
          "description": "A list of arguments defining a specific metric, e.g. regions for a bandwidth",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "attribute": {
          "description": "Attribute name defined in the taxonomy",
          "type": "string"
        },
        "description": {
          "description": "Description",
          "type": "string"
        },
        "instance": {
          "description": "A reference to the resource instance, e.g. storage account name",
          "type": "string"
        },
        "metricsName": {
          "description": "Metrics",
          "type": "string"
        },
        "object": {
          "$ref": "#/definitions/InstanceType",
          "description": "A resource defined by the attribute (\"fybrikstorageaccount\",\"fybrikmodule\",\"cluster\")"
        },
        "value": {
          "description": "Attribute value",
          "type": "string"
        }
      }
    },
    "InfrastructureMetrics": {
      "type": "object",
      "required": [
        "name",
        "type"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "scale": {
          "$ref": "#/definitions/RangeType",
          "description": "A scale of values (minimum and maximum) when applicable"
        },
        "type": {
          "$ref": "#/definitions/AttributeType",
          "description": "Attribute type, e.g. numeric or string"
        },
        "units": {
          "$ref": "#/definitions/Units",
          "description": "Measurement units"
        }
      }
    },
    "InstanceType": {
      "type": "string",
      "enum": [
        "fybrikmodule",
        "fybrikstorageaccount",
        "cluster"
      ]
    },
    "Interface": {
      "type": "object",
      "required": [
        "protocol"
      ],
      "properties": {
        "dataformat": {
          "$ref": "#/definitions/DataFormat",
          "description": "DataFormat defines the data format type"
        },
        "protocol": {
          "$ref": "#/definitions/ConnectionType",
          "description": "Protocol defines the interface protocol used for data transactions"
        }
      }
    },
    "PluginType": {
      "type": "string"
    },
    "PolicyManagerRequestContext": {
      "type": "object",
      "additionalProperties": true
    },
    "ProcessingLocation": {
      "type": "string"
    },
    "RangeType": {
      "type": "object",
      "properties": {
        "max": {
          "type": "integer"
        },
        "min": {
          "type": "integer"
        }
      }
    },
    "Tags": {
      "type": "object",
      "additionalProperties": true
    },
    "Units": {
      "type": "string"
    }
  }
}